<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="60 seconds" debug="false">  
	<contextName>netty-http</contextName>  
	
	<!-- 输出到控制台 -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender"> 
    	<encoder>
        	<pattern>%d{yyyy-MM-dd HH:mm:ss} [%level] - %m%n</pattern>
    	</encoder>
  	</appender>
  	
  	<!-- info日志 -->
  	<appender name="INFO-OUT" class="ch.qos.logback.core.rolling.RollingFileAppender">
    	<encoder>
        	<pattern>[%level] %d{yyyy-MM-dd HH:mm:ss} [%class:%line] - %m%n</pattern>
    	</encoder>
    	      
      	<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      		<!-- daily rollover -->
      		<fileNamePattern>/data/weblog/netty/nteey_http.%d{yyyy-MM-dd}.log.zip</fileNamePattern>
      		<!-- keep 10 days' worth of history -->
      		<maxHistory>10</maxHistory>
    	</rollingPolicy>
	</appender>
	
	<!-- error日志 -->
  	<appender name="ERROR-OUT" class="ch.qos.logback.core.rolling.RollingFileAppender">
    	<encoder>
        	<pattern>[%level] %d{yyyy-MM-dd HH:mm:ss} [%class:%line] - %m%n</pattern>
    	</encoder>
    	
      	<filter class="ch.qos.logback.classic.filter.LevelFilter">
      		<level>ERROR</level>
      		<onMatch>ACCEPT</onMatch>
      		<onMismatch>DENY</onMismatch>
   		</filter>
      
      	<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      		<!-- daily rollover -->
      		<fileNamePattern>/data/weblog/netty/netty_error.%d{yyyy-MM-dd}.log.zip</fileNamePattern>
      		<!-- keep 10 days' worth of history -->
      		<maxHistory>10</maxHistory>
    	</rollingPolicy>
	</appender>
	
	<root level="info">
    	<appender-ref ref="STDOUT" />
    	<appender-ref ref="INFO-OUT" />
    	<appender-ref ref="ERROR-OUT" />
	</root>
	
</configuration>  